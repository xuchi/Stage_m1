<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
	<SurfaceView
	    android:id="@+id/scan_surface_view"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignTop="@+id/scan_radio_group"
	    />
    <RadioGroup
        android:id="@+id/scan_radio_group"
        android:padding="5dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:checkedButton="@+id/scan_match"
        android:background="#00000000"
        >
        <RadioButton
            android:id="@+id/scan_match"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="match"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            />
        <RadioButton
            android:id="@+id/scan_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:layout_weight="1"
            android:shadowColor="#FFFFFF"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            />
    </RadioGroup>
	<ImageView
	    android:id="@+id/scan_image_view"
	    android:layout_height="match_parent"
	    android:layout_width="match_parent"
	    android:visibility="invisible"
	    android:contentDescription="@null"
	    />
	<RelativeLayout
	    android:id="@+id/splash"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    >
	</RelativeLayout>
	<FrameLayout
	    android:id="@+id/scan_frame"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@android:color/background_light"
	    android:visibility="invisible"
	    />
</RelativeLayout>